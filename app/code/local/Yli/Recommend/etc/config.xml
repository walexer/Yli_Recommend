<?xml version="1.0"?>
<config>
      <modules>
        <Yli_Recommend>
          <version>0.1.0</version>
        </Yli_Recommend>
      </modules>
      <global>
         <blocks>
              <recommend>
                <class>Yli_Recommend_Block</class>
              </recommend> 
          </blocks>
          <helpers>
            <recommend>
              <class>Yli_Recommend_Helper</class>
            </recommend>
          </helpers>
          <models>
             <recommend>
                <class>Yli_Recommend_Model</class>
             </recommend>
          </models>
          <events>
            <sales_model_service_quote_submit_success>
                <observers>
                    <order_customer_product>
                        <class>recommend/observer</class>
                        <method>orderCustomerProduct</method>
                    </order_customer_product>
                </observers>
            </sales_model_service_quote_submit_success>
            <catalog_controller_product_view>
            	<observers>
                    <view_customer_product>
                        <class>recommend/observer</class>
                        <method>viewCustomerProduct</method>
                    </view_customer_product>
                </observers>
            </catalog_controller_product_view>
          </events>
      </global>
      <crontab>
        <jobs>
            <init_related>
                <schedule>
                    <cron_expr>*/20 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>recommend/related::init</model>
                </run>
            </init_related>
        </jobs>
    </crontab>
</config>